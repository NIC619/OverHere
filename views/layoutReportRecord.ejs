<% layout('layout_html_test') -%>
<ul>
  <li><a class="active" href="/">OverHere</a></li>
  <li><a href="/">Gallery</a></li>
</ul>
<div class="report-layout">
    <% for(var i = 0 ; i < reportRecordList.length ; i++) { %>
        <div class="report-div">
            <div class="report-img"><a href="#<%= reportRecordList[i].photoID %>" rel="modal:open"><img src ="/gallery/<%= reportRecordList[i].photoID %>" style="display:block; margin:auto; width:100%; height:100%" alt="Fail loading image..."></a></div>
            <div class="report-text">Report reason: <%= reportRecordList[i].reason%></div>
        </div>
        <div id="<%= reportRecordList[i].photoID %>" style="display: none;">
            <img src ="/gallery/<%= reportRecordList[i].photoID %>" style="width: 100%; height: 90%" alt="Fail loading image..."><br>
            <a target="_blank" href="/choosenLocations?id=<%= reportRecordList[i].locationID %>">Display Location</a>
        </div>
    <% } %>
</div>